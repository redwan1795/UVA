#include <stdio.h>

long long int s[500], result;

void init();
void processCase();
long long int abs(long long int a);


long long int abs(long long int a)
{
    long long int value;
    
    if(a<0)
        return value= a*-1;
    return value= a;
    
}

void init()
{
    result =0;
    for(int i=0; i<500;i++)
        s[i]=0;
}

int main()
{
    
    //freopen("input.txt", "r", stdin);
    //freopen("output.txt", "w", stdout);
    
    int T, N;

    
    scanf("%d", &T);
    
    for(int i=0; i<T;i++)
    {
        init();
        scanf("%d", &N);
        for (int j=0; j<N; j++) 
        {
            
            scanf("%lld", &s[j]);
            if(j>0)
            {
                result += abs(s[j]-s[j-1]);
            }
        }
        printf("%lld\n", result);
    }
    
    //printf("10041");
    return 0;
}

